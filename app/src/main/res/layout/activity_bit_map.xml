<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".bitmap.BitMapActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/ivImageStream"
                android:layout_width="200dp"
                android:layout_height="266dp"
                android:scaleType="fitXY"
                android:src="@mipmap/wuxianfei"/>

            <ImageView
                android:id="@+id/ivImageDecodeFile"
                android:layout_width="200dp"
                android:layout_height="266dp"
                android:layout_marginTop="10dp"
                android:src="@mipmap/wuxianjing"/>

            <ImageView
                android:id="@+id/ivImageSource"
                android:layout_width="266dp"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:src="@mipmap/wuxianxian"/>

            <ImageView
                android:id="@+id/ivImageClass"
                android:layout_width="200dp"
                android:layout_height="266dp"
                android:layout_marginTop="10dp"
                android:src="@mipmap/wuxianya"/>

            <ImageView
                android:id="@+id/ivImageByte"
                android:layout_width="200dp"
                android:layout_height="266dp"
                android:layout_marginTop="10dp"
                android:src="@mipmap/wuxianfei"/>

            <ImageView
                android:id="@+id/ivImageRegionDecoder"
                android:layout_width="200dp"
                android:layout_height="266dp"
                android:layout_marginTop="10dp"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>