<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".notification.MonitorActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/notification_monitor_on_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="NotificationMonitorOn"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/notification_monitor_off_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="NotificationMonitorOff"
                    android:textAllCaps="false" />
            </LinearLayout>

            <ImageView
                android:id="@+id/ivIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/tvStatusNotificationMsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="StatusNotificationMsg获取到的消息" />

            <TextView
                android:id="@+id/tvNotification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@color/colorPrimary"
                android:text="Notification获取到的消息" />

            <TextView
                android:id="@+id/tvBundle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bundle获取到的消息" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>